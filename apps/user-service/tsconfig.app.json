{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@domains/*": ["src/domains/*"],
      "@infrastructures/*": ["src/infrastructures/*"]
    }
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
