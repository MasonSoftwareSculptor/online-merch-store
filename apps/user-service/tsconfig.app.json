{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "baseUrl": ".",
    "paths": {
      "@restapi/*": ["src/presentations/restapi/*"],
      "@domains/*": ["src/domains/*"],
      "@infrastructures/*": ["src/infrastructures/*"],
      "@online-merch-store/libs/*": ["../../libs/*"]
    }
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
